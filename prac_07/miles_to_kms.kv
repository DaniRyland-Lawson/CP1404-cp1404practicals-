BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            on_text: app.handle_convert(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.handle_increment(input_miles.text, 1)

            Button:
                text: 'Down'
                font_size: 48
                on_press: app.handle_increment(input_miles.text, -1)

    BoxLayout:
        orientation: 'vertical'
#        Button:
#            id: convert
#            text: 'Convert M to KM'
#            on_press: app.handle_convert()

        Label:
            id: output_label
            text: app.output_km
            font_size: 48
            color: (1, 1, 0, 1)
